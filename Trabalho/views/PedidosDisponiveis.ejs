  <%- include('head'); %>

  <body>
    <section class="container-fluid">
      <section class = "row justify-content-center">
        <section class = "col-12 col-sm-6 col-md-3">
          <section class = "form-container">
              <div class="">

                <div class="mt-5 mb-1">
                  <h1 class="text-center">Pedidos Disponíveis</h1>
                  <div class="border rounded mt-1 mb-1">
                    <div class="col-sm">

                      <div class="border rounded mt-1 mb-1">
                        <div class="col-sm">
                          <h2 class="display-4 text-center">Colchão</h2> 
                        </div>

                        <div class="container mt-1">
                          <div class="row">

                            <div class="col-sm">
                              <h6 class="text-center">Aproximadamente 10kg</h6>
                            </div>

                            <div class="col-sm">
                              <h6 class="text-center">Não compartilhado</h6>
                            </div>
                          </div>
                        </div>

                        <div class="mt-2 ml-1 mr-1">É um colchão de casal.</div>

                        <div class="container mt-4">
                          <div class="row">

                            <div class="col-sm">
                              <h6>Origem:</h6>
                              <div>Três de maio, 137</div>
                            </div>

                            <div class="col-sm">
                              <h6>Destino:</h6>
                              <div>Gomes Carneiro, 1</div>
                            </div>
                          </div>
                        </div>

                        <div class="container mt-1">
                          <div class="row">

                            <div class="col-sm">
                              <h6>Localização do entregador:</h1>
                              <div>João Pessoa</div>
                            </div>

                          </div>
                        </div>

                        <div class="container mt-1">
                          <div class="row">

                            <div class="col-sm">
                              <h6>Preço:</h1>
                              <div>20R$</div>
                            </div>

                            <div class="col-sm">
                              <h6>Tempo estimado:</h1>
                              <div>50 minutos</div>
                            </div>

                          </div>
                        </div>

                        <div class="container mt-1">
                          <div class="row">
                            <div class="col-sm">
                              <div class="text-center mt-1" method="POST" action="/sdf">
                                <button type="submit" class="btn btn-primary">Cancelar pedido</button>
                              </div> 
                            </div>
                          </div>
                        </div>

                      </div>

                </div>
              </div>
            </div>

              </div>
          </section>
        </section>
      </section>
    </section>

